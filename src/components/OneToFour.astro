---
import { Image } from "@astrojs/image/components";

const { imageArr } = Astro.props;
---

<div class="flex grow flex-col gap-5 sm:flex-row sm:gap-10">
  <div class="flex flex-1 grow">
    <figure class="relative inline-flex flex-1 grow flex-col">
      <Image
        class="mb-5 flex-1 object-cover sm:mb-0"
        src={imageArr[0].src}
        alt={imageArr[0].alt}
        width={imageArr[0].width}
        height={imageArr[0].height}
        format="webp"
        quality={90}
      />
      <figcaption
        class="sm:bg-white-700 leading-121 text-brand-light top-0 w-full text-sm sm:absolute sm:px-5 sm:py-5 sm:text-base"
      >
        <span class="mb-2.5 inline-block">{imageArr[0].caption[0]}</span><br />
        {imageArr[0].caption[1]}
      </figcaption>
    </figure>
  </div>
  <div class="flex flex-1 flex-col gap-5 sm:gap-10">
    <div class="inline-flex flex-1 gap-10 gap-5 sm:grow">
      <div class="flex-1">
        <figure>
          <Image
            class="mb-5 object-cover"
            src={imageArr[1].src}
            alt={imageArr[1].alt}
            width={imageArr[1].width}
            height={imageArr[1].height}
            format="webp"
            quality={90}
          />
          <figcaption class="text-sm">
            <span class="mb-2.5 inline-block">{imageArr[1].caption[0]}</span><br
            />
            {imageArr[1].caption[1]}
          </figcaption>
        </figure>
      </div>
      <div class="flex-1">
        <figure>
          <Image
            class="mb-5 object-cover"
            src={imageArr[2].src}
            alt={imageArr[2].alt}
            width={imageArr[2].width}
            height={imageArr[2].height}
            format="webp"
            quality={90}
          />
          <figcaption class="text-sm">
            <span class="mb-2.5 inline-block">{imageArr[2].caption[0]}</span><br
            />
            {imageArr[2].caption[1]}
          </figcaption>
        </figure>
      </div>
    </div>
    <div class="inline-flex flex-1 grow gap-5 sm:gap-10">
      <div class="flex-1">
        <figure>
          <Image
            class="mb-5 object-cover"
            src={imageArr[3].src}
            alt={imageArr[3].alt}
            width={imageArr[3].width}
            height={imageArr[3].height}
            format="webp"
            quality={90}
          />
          <figcaption class="text-sm">
            <span class="mb-2.5 inline-block">{imageArr[3].caption[0]}</span><br
            />
            {imageArr[3].caption[1]}
          </figcaption>
        </figure>
      </div>
      <div class="flex-1">
        <figure>
          <Image
            class="mb-5 object-cover"
            src={imageArr[4].src}
            alt={imageArr[4].alt}
            width={imageArr[4].width}
            height={imageArr[4].height}
            format="webp"
            quality={90}
          />
          <figcaption class="text-sm">
            <span class="mb-2.5 inline-block">{imageArr[4].caption[0]}</span><br
            />
            {imageArr[4].caption[1]}
          </figcaption>
        </figure>
      </div>
    </div>
  </div>
</div>
