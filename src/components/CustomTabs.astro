---
import { Image } from "@astrojs/image/components";
import tabs from "../data/tabs.json";
import "../styles/custom-tabs/custom-tabs.css";

const { classes, sectionId } = Astro.props;
---

<section id={sectionId} class={classes}>
  <div class="flex flex-col">
    <input
      id="tabs-radio-1"
      type="radio"
      name="tabs"
      hidden
      checked="checked"
    />
    <input id="tabs-radio-2" type="radio" name="tabs" hidden />
    <input id="tabs-radio-3" type="radio" name="tabs" hidden />
    <div class="w-full p-5 sm:mx-auto sm:max-w-7xl sm:px-16">
      <h2
        class="custom-tabs-heading font-cinzel sm:mb-15 text-3xl after:transition-all after:duration-500 sm:text-6xl"
      >
      </h2>
    </div>
    <div
      class="sm:gap-15 mb-5 flex flex-col items-center gap-5 border-y px-5 py-4 sm:mb-20 sm:grow sm:flex-row sm:items-start sm:justify-center sm:px-0 sm:py-10"
    >
      <label id="tabs-label-1" for="tabs-radio-1" class="flex-1 sm:flex-none">
        <div class="text-brand-button-disabled">Weddings</div>
      </label>
      <label
        id="tabs-label-2"
        for="tabs-radio-2"
        class="flex-1 text-center sm:flex-none"
      >
        <div class="text-brand-button-disabled">Individual Appointments</div>
      </label>
      <label
        id="tabs-label-3"
        for="tabs-radio-3"
        class="flex-1 text-right sm:flex-none"
      >
        <div class="text-brand-button-disabled">Party & Events</div>
      </label>
    </div>
    {
      tabs.map((item: any, index: number) => (
        <div id={`panel-${index + 1}`} class="custom-tab-panel">
          {item.tab.map((val: any, index: number) => (
            <div class="mx-auto mb-10 flex max-w-7xl grow flex-col gap-5 px-5 pb-5 sm:mb-20 sm:flex-row sm:gap-10 sm:px-16 sm:pb-0">
              <div class="inline-flex flex-1 grow flex-col gap-5 lg:flex-row lg:gap-10">
                <div class="inline-flex sm:hidden">
                  <h1 class="font-cinzel text-3.5xl text-brand-green align-top leading-none sm:text-7xl">
                    0{index + 1}
                  </h1>
                  <h3 class="my-1.75 font-cinzel ml-2.5 text-xl leading-none sm:hidden">
                    {val.title}
                  </h3>
                </div>
                <div
                  class={`${
                    index % 2 < 1 ? "lg:order-last " : ""
                  }flex flex-1 grow`}
                >
                  <figure class="flex-1">
                    <Image
                      class="h-full w-full object-cover"
                      src={val.img.src}
                      alt={val.img.alt}
                      format="webp"
                      quality={90}
                      width={val.img.width}
                      height={val.img.height}
                    />
                  </figure>
                </div>
                <div class="inline-flex flex-1 flex-col justify-between gap-7 sm:items-end xl:gap-0">
                  <div class="inline-flex gap-10">
                    <h1 class="font-cinzel text-3.5xl text-brand-green hidden align-top leading-none sm:block sm:text-7xl">
                      0{index + 1}
                    </h1>
                    <div>
                      <h3 class="font-cinzel mb-5 mt-3 hidden text-xl leading-none sm:block sm:text-4xl">
                        {val.title}
                      </h3>
                      <p>{val.content}</p>
                    </div>
                  </div>
                  <div>
                    <button
                      class="border-brand-black leading-140 text-brand-black inline-block border bg-white px-20 py-4"
                      type="button"
                    >
                      Learn More
                    </button>
                  </div>
                </div>
              </div>
            </div>
          ))}
        </div>
      ))
    }
  </div>
</section>
